<h1>Rent-A-Cat</h1>

<form action= "/cat_rental_requests" method="POST">

<label for="pick">Pick a cat: </label>
<select id="pick" name="cat_rental_request[cat_id]">
  <option disabled selected >--SELECT--</option>
  <% @cats.each do |cat| %>
      <option value="<%=cat.id%>"> <%= cat.name %> </option>
  <% end %>
</select>

<br><br>

<label for="start_date" >Start Date: </label>
<input id="start_date" type="date" name="cat_rental_request[start_date]">

<br><br>

<label for="end_date" >End Date: </label>
<input id="end_date" type="date" name="cat_rental_request[end_date]">


 <input type="submit" value="Rent!">

 </form>
